generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agenda {
  id        Int      @id @default(autoincrement())
  titulo    String
  data      DateTime
  local     String
  cidade    String
  createdAt DateTime @default(now())
}

model Noticia {
  id        Int      @id @default(autoincrement())
  titulo    String
  conteudo  String
  link      String
  createdAt DateTime @default(now())
}

model Book {
  id           Int      @id @default(autoincrement())
  titulo       String
  autor        String
  descricao    String
  imagem       Bytes?
  imagemTipo   String?
  createdAt    DateTime @default(now())

  @@map("Livro")
}

model Projeto {
  id        Int      @id @default(autoincrement())
  data      DateTime
  descricao String
}

model Sobre {
  ano        Int      @id
  imagem     Bytes?
  imagemTipo String?
  descricao  String
}
